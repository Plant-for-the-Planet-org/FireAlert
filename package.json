{
  "name": "firealert",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/Plant-for-the-Planet-org/FireAlert.git",
  "author": "Plant-for-the-Planet <info@plant-for-the-planet.org>",
  "license": "MIT",
  "engines": {
    "node": "22.x",
    "yarn": "1.22.x"
  },
  "scripts": {
    "nativeapp": "yarn workspace @firealert/nativeapp",
