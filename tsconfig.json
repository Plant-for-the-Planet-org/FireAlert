{
    "compilerOptions": {
      /* Basic Options */
      "target": "es2017",
      "module": "commonjs",
      "lib": ["ESNext"],
  
      /* Strict Type-Checking Options */
      "strict": true,
  
      /* Module Resolution Options */
      "moduleResolution": "node",
      "esModuleInterop": true,
  
      /* Advanced Options */
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "references": [
      {
         "path": "./apps/nativeapp"
      },
      {
         "path": "./apps/server"
      }
    ]
  }